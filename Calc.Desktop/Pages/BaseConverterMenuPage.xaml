<local:BasePage x:TypeArguments="local:BaseConverterMenuViewModel" x:Class="Calc.Desktop.BaseConverterMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calc.Desktop"
      mc:Ignorable="d" 
      x:Name="Page"
      d:DesignHeight="600" d:DesignWidth="950"
      Title="BaseConverterPage">

    <Border Background="{StaticResource BackgroundLightBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Padding="0" Grid.Column="0" x:Name="MenuFrame" Content="{Binding MenuPage, Converter={local:ApplicationPageValueConverter}}"/>
            <Frame Padding="0" Grid.Column="1" Background="{StaticResource GrayBrush}" x:Name="BaseConverterFrame" Content="{Binding BaseConverterPage, Converter={local:ApplicationPageValueConverter}}"/>
            
            
        </Grid>        
    </Border>
    
</local:BasePage> 
